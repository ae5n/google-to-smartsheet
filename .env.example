# Server Configuration
PORT=3001
NODE_ENV=development
HTTPS_PORT=3443

# Database
DATABASE_PATH=./data/app.db
ENCRYPTION_KEY=your-256-bit-encryption-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Smartsheet API
SMARTSHEET_CLIENT_ID=your-smartsheet-client-id
SMARTSHEET_CLIENT_SECRET=your-smartsheet-client-secret

# Session Configuration
SESSION_SECRET=your-session-secret-key-here

# HTTPS Certificates (for development)
HTTPS_KEY_PATH=./certs/server.key
HTTPS_CERT_PATH=./certs/server.crt

# Application URLs
BASE_URL=https://localhost:3443
CLIENT_URL=https://localhost:3000

# Security
CSRF_SECRET=your-csrf-secret-here
JWT_SECRET=your-jwt-secret-here

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
TEMP_DIR=./temp